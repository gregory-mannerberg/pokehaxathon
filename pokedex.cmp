                        </td>
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
    </aura:if-->
    <div class="slds-grid">
        <div class="slds-col slds-size_1-of-3">
            <aura:iteration items="{!v.names}" var="name" >
                <lightning:card title="{!name}" >
                    <lightning:button label="Details" onclick="{!c.showPokemon}" value="{!name}"/>
                </lightning:card>
            </aura:iteration>
        </div>
        <aura:if isTrue="{!v.show}">
            <div class="slds-col slds-size_2-of-3">
                <lightning:accordion aura:id="accordion" activeSectionName="B">
                    <lightning:accordionSection name="A" label="Description">
                        <aura:set attribute="actions">
                            <lightning:buttonMenu aura:id="menu" alternativeText="Show menu" iconSize="x-small" menuAlignment="right">
                                <lightning:menuItem value="New" label="Menu Item One" />
                                <lightning:menuItem value="Edit" label="Menu Item Two" />
                            </lightning:buttonMenu>
                        </aura:set>
                        <aura:set attribute="body">
                            <lightning:card title="{!v.pokemonName}" >
                                <img src="{!v.sprite}" alt="poke pic missing"/>
                                <aura:iteration items="{!v.types}" var="type">
                                    <div>Type: {!type}</div>
                                </aura:iteration>
                                <div>Height: {!v.height}</div>
                                <div>Weight: {!v.weight}</div>
                                <div>National Id: {!v.id}</div>
                            </lightning:card>
                        </aura:set> 
                    </lightning:accordionSection>
                    <lightning:accordionSection name="B" label="Abilities">
                        <lightning:card title="Abilities" >
                            <aura:iteration items="{!v.abilities}" var="ability">
                                <div>{!ability}</div>
                            </aura:iteration>
                        </lightning:card>
                    </lightning:accordionSection>
                    <lightning:accordionSection name="C" label="Moves">
                        <lightning:card title="Moves">
                            <aura:iteration items="{!v.moves}" var="move">
                                <div>{!move}</div>
                            </aura:iteration>
                        </lightning:card>
                    </lightning:accordionSection>
                </lightning:accordion>
            </div>
        </aura:if>
    </div>
